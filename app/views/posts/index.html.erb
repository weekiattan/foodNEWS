<div class="container">
  <h1 class="display-4 row justify-content-center">All Posts</h1>

  <% if user_signed_in? %>

    <div class="card-deck">
      <% @post.each do |post| %>
        <% time = post.created_at.localtime(utc_offset = nil) %>
        <div class="card text-center ">
          <img class="card-img-top" alt="image pin" src=<%= post.img_url %> >
          <div class="card-body">
            <h4 class="card-title"><%= post.title %></h4>
            <h5 class="card-title"><%= post.description %></h5>
            <h6 class="card-title"><%= post.category.cusines %></h6>
            <div class="star-rating">
              <% post.rating.to_i.times do  %>
                <span>‚≠ê</span>
              <% end %>
            </div>
            <footer class="blockquote-footer">created at <cite title="Source Title"><%= post.created_at.day %>/<%= post.created_at.month %>/<%= post.created_at.year %> <%= time.strftime("%I:%M %p") %></cite></footer>
          </div>
          
        

          <div class="card-body">
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to 'Show', post_path(post), {:class => "btn btn-sm btn-info"} %>
              <%= link_to 'Edit', edit_post_path(post), {:class => "btn btn-sm btn-warning"} %>
              <%= link_to 'Delete', post_path(post), :class => "btn btn-sm btn-secondary",
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div> 
      <% end %>
    </div>
    <%= link_to 'New Post', new_post_path, {:class => "btn btn-success btn-lg btn-block"} %>
  <% end %> 
</div>

