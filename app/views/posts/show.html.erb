<div class="container">



<div class="card text-center ml-auto mr-auto mb-5" style="width: 30rem;">
	  <img class="card-img-top" alt="image pin" src=<%= @post.cloud_url %> >
<div class=“card-body”>
 <h4 class=“card-title”><%= @post.title %></h4>
 <h5 class=“card-title”><%= @post.description %></h5>
 <h6 class=“card-title”><%= @post.category.cusines %></h6>
</div>

<div class="star-rating">
	<% @post.rating.to_i.times do  %>
		<span>⭐</span>
	<% end %>
</div>

<% time = @post.created_at.localtime(utc_offset = nil) %>
</div>

<%= form_with model: [@post, @review], local: true do |form| %>  <p>
    <%= form.label :comments %><br>
    <%= form.text_area :comments, :class => 'form-control ' %>
  </p>

  <p>
    <%= form.submit 'Add a Comment', :class => 'btn btn-outline-success btn-lg' %>
  </p>
<% end %>


<div class="text-center mb-5">
<%= link_to 'Back', root_path, {:class => "btn btn-outline-secondary"} %>
	<% if @post.user_id == current_user.id%>
		<%= link_to 'Edit Post', edit_post_path(@post), {:class => "btn btn-outline-primary"} %>
		<%= link_to 'Delete Post', post_path(@post), :class => "btn btn-outline-warning",
		method: :delete,
		        data: { confirm: 'Are you sure?' } %>
	<% end %>	
</div>


</div>